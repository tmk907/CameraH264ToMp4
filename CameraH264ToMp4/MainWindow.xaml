<Window
    x:Class="CameraH264ToMp4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CameraH264ToMp4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button Click="Button_Click" Content="Pick folders" />
            <TextBlock x:Name="progressTB" />
            <Button Click="Button_Click_3" Content="Output folder" />
            <TextBlock x:Name="outputFolderTB" />
            <Button Click="Button_Click_4" Content="Start" />
            <Button Click="Button_Click_1" Content="ffmpeg" />
        </StackPanel>
    </Grid>
</Window>
